{
  "parser": "babel-eslint",
  "env":{
    "node": true,
    "es6": true,
    "browser": true
  },
  "rules":{
    "camelcase": 2,
    "eol-last": 2,
    "indent": [2, 2],
    "no-trailing-spaces": 2,
    "quotes": [2, "backtick", "avoid-escape"],
    "strict": [1, "never"],
    "no-unused-vars": 2,
    "no-underscore-dangle": 1,
    "semi": [2, "always"],
    "no-undef": 2,
    "no-use-before-define": 2,
    "block-scoped-var": 2,
    "space-in-parens": [2, "never"],
    "object-curly-spacing": [2, "always"]
  },
    "parserOptions": {
        "ecmaFeatures": {
          "modules": true
        }
    }
}
